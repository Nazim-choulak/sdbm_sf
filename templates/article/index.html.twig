{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>


	{# {{ dump(articles) }} #}


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prix_Achat</th>
				<th>Volume</th>
				<th>Titrage</th>
				<th>Type bi√®re</th>
				<th>Marque</th>
				<th>Couleur</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.nom }}</td>
					<td>{{ article.PrixAchat }}</td>
					<td>{{ article.volume }}</td>
					<td>{{ article.titrage }}</td>

					{% if article.typeBiere == null %}
						<td>{% trans %}N/A{% endtrans %}</td>
					{% else %}
						<td>
							{{article.typeBiere.nom}}
						</td>
					{% endif %}
					{% if article.marques == null %}
						<td>{% trans %}N/A{% endtrans %}</td>
					{% else %}
						<td>
							{{article.marques.nom}}
						</td>
					{% endif %}
					{% if article.couleurs == null %}
						<td>{% trans %}N/A{% endtrans %}</td>
					{% else %}
						<td>
							{{article.couleurs.nom}}
						</td>
					{% endif %}
					<td>
						<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
						<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
