{% extends 'base.html.twig' %}

{% block title %}Marque index
{% endblock %}

{% block body %}
	<div id="zone-affichage" class="container-fluid text-center">
			<div class='row '>
				<div class='col-md-3 col-12 mb-2 '>
					<a href="{{ path('app_marque_new') }}">
						<button type='button' class='btn btn-primary col-12 bi bi-plus-circle' id="btn-ajout">&nbsp;Ajouter</button>
					</a>
				</div>
				<div class='col-md-9 col-12'><input type='search' class=' form-control col-12' id='search' placeholder='Recherche...' name='search'></div>
			</div><br>
		</div>
<div id="zone-affichage" class="container-fluid text-center">
    <table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Pays</th>
				<th>Fabricant</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for marque in marques %}
				<tr>
					<td>{{ marque.id }}</td>
					<td>{{ marque.nom }}</td>
					{% if marque.pays == null %}
						<td>{% trans %}N/A{% endtrans %}</td>
					{% else %}
						<td>
							{{ marque.pays.nom }}
						</td>
					{% endif %}
					{% if marque.fabricants == null %}
						<td>{% trans %}N/A{% endtrans %}</td>
					{% else %}
						<td>
							{{ marque.fabricants.nom }}
						</td>
					{% endif %}
					<td>
						<a href="{{ path('app_marque_show', {'id': marque.id}) }}">show</a>
						<a href="{{ path('app_marque_edit', {'id': marque.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
    </div>

{% endblock %}
